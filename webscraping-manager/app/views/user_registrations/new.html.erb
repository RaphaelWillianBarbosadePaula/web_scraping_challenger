<div class="auth-container">
  <div class="auth-card">

    <div class="auth-header">
      <h2>Nova Conta</h2>
      <%= link_to "Já tem login?", root_path, class: "auth-link" %>
    </div>

    <% if flash[:alert] %>
      <div class="alert-error">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <% if flash[:notice] %>
      <div class="alert-notice">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <%= form_with url: register_path, local: true, data: { turbo: false } do |form| %>
      <div class="form-group">
        <%= form.label :nickname, class: "form-label" %>
        <%= form.text_field :nickname, required: true, class: "form-input", placeholder: "Nome de Usuário" %>
      </div>

      <div class="form-group">
        <%= form.label :email, class: "form-label" %>
        <%= form.email_field :email, required: true, class: "form-input", placeholder: "seu@email.com" %>
      </div>

      <div class="form-group">
        <%= form.label :password, "Senha (min. 8 caracteres)", class: "form-label" %>
        <%= form.password_field :password, required: true, class: "form-input", placeholder: "********" %>
      </div>

      <div class="form-group">
        <%= form.label :password_confirmation, "Confirme a Senha", class: "form-label" %>
        <%= form.password_field :password_confirmation, required: true, class: "form-input", placeholder: "********" %>
      </div>

      <div>
        <%= form.submit "Criar Conta", class: "btn-primary" %>
      </div>
    <% end %>

  </div>
</div>