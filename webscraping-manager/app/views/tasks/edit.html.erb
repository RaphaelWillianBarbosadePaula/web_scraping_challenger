<div class="home-container">
  <div class="home-card">
    <div style="margin-bottom: 30px;">
      <h2 style="margin: 0; color: #333;">Editar Tarefa #<%= @task.id %></h2>
      <p style="color: #666; margin-top: 5px;">Atualize as informações de monitoramento</p>
    </div>

    <%= form_with(model: @task, local: true) do |f| %>

      <% if @task.errors.any? %>
        <div class="alert-error">
          <ul>
            <% @task.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :title, "Título para Identificação", class: "form-label" %>
        <%= f.text_field :title, class: "form-input" %>
      </div>

      <div class="form-group">
        <%= f.label :url, "Link do Anúncio", class: "form-label" %>
        <%= f.text_field :url, class: "form-input" %>
        <small style="display: block; margin-top: 5px; color: #999; font-size: 0.8rem; text-align: left;">
          Atenção: Alterar a URL reiniciará o processo de scraping.
        </small>
      </div>

      <div style="margin-top: 30px;">
        <%= f.submit "Salvar Alterações", class: "btn btn-primary w-100" %>
      </div>

      <div style="margin-top: 20px; text-align: center;">
        <%= link_to "Cancelar", task_path(@task), class: "link-muted" %>
      </div>
    <% end %>
  </div>
</div>